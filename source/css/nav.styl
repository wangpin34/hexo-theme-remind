@import "variables.styl"
// 头部导航

zIndexTopBar=3
zIndexNavItem=2
zIndexNavOverlap=1

nav
  text-align: center
  max-width: pc-width
  margin: 0 auto
  border-bottom: 1px solid #ECF0F1
  font-size: 16px
  line-height: 4
  .top-bar
    display: none
    z-index: zIndexTopBar
  a,a.active, a.link, a.visited
    color: font-primary-color
    text-decoration: none
    padding: 0 2em
    font-weight: lighter
    transition: font-weight 200ms ease-out
    &:hover, &:focus
      font-weight: bold
    &.active
      font-weight: bold
      color: accent-color
  
  .mobile-menu
    input 
      display: none

  @media all and (max-width: 750px)
    &
      position: fixed
      top: 0
      left: 0
      width: 100%
      max-width: 100%
      height: 68px
      z-index: 999
      background-color: #fff
    .top-bar
      display: block
      border-bottom: 1px solid grey-color
      background-color: bg-color
    .items
      transform: translate(-50vw)
      transition: transform 200ms ease-in-out
      display: flex
      flex-direction: column
      position: fixed
      width: 50vw
      height: calc(100vh - 64px)
      top: 68px
      left: 0
      background-color: #fff
      z-index: zIndexNavItem
      a,a.active, a.link, a.visited
        padding: 0 8px
        &:hover, &:focus
          font-weight: lighter
        &.active
          font-weight: lighter
          color: unset

    .overlap 
      top: 0
      left: 0
      width: 100vw
      height: calc(100vh - 64px)
      top: 64px
      background-color: bg-color
      z-index: zIndexNavOverlap

      display: none
      
    .mobile-menu
      display: block
      &:before
        content: ""
        display: block
        width: 32px
        height: 32px
        border: 0
        outline: 0
        background-color: transparent
        background-repeat: no-repeat
        background-position: center
        background-size: 32px 32px
        background-image: url(/assets/menu.svg)

        position: fixed
        top: 16px
        left: 24px

      input:checked ~ .items
        transform: translate(0)
      input:checked ~ .overlap
        display: block
        opacity: 0.8
        